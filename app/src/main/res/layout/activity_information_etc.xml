<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".information.EtcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/etcDate"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:background="@color/darkGray"
            android:text="오늘"
            android:textSize="25sp"
            android:fontFamily="@font/cookierunbold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:gravity="top"
            android:background="@color/darkGray"
            android:text="일정을 기록해주세요!"
            android:textSize="25sp"
            android:fontFamily="@font/cookierunbold"
            android:textColor="@color/white"/>
        <ScrollView
            android:id="@+id/etc_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_member_background"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="색상 팔레트"/>

                <GridView
                    android:id="@+id/colorSet"
                    android:layout_width="260dp"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:listSelector="@color/white"
                    android:numColumns="5"/>
                <TextView
                    android:id="@+id/checkColorText"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="색상을 선택해주세요."
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="제목"/>
                <EditText
                    android:id="@+id/etcTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_common"
                    android:hint="5자 이내로 입력해주세요."
                    android:textColorHint="@color/gray"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:maxLength="5"
                    android:ems="10" />
                <TextView
                    android:id="@+id/checkTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="제목을 입력해주세요."
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="상세 내용"/>
                    <TextView
                        android:id="@+id/etc_content_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/gray"
                        android:text="0/100"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/etcContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_common"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:gravity="top"
                    android:maxLength="100"
                    android:scrollbars="vertical"/>
                <TextView
                    android:id="@+id/checkContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="상세 내용을 입력해주세요."
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>
        </ScrollView>
        <android.widget.Button
            android:id="@+id/etcInsertButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/darkGray"
            android:text="등록하기"
            android:textSize="21sp"
            android:fontFamily="@font/cookierunbold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/etcLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>